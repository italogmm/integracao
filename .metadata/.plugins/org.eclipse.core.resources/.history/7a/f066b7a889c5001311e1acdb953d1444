package com.ufg.piadadodiamobile.services;

import android.app.Notification;
import android.app.NotificationManager;
import android.app.PendingIntent;
import android.content.Context;
import android.content.Intent;

import com.ufg.piadadodiamobile.R;
import com.ufg.piadadodiamobile.activity.AtivaGCMActivity;
import com.ufg.piadadodiamobile.activity.PiadaActivity;

public class NotificacaoPiada {
	/**
	 * M꾮odo responsvel por disparar uma notifica꼚o na barra de status.
	 * 
	 * @param titulo
	 * @param mensagem
	 * @param context
	 */
	public static void mostraNotificacao(String titulo, String mensagem,
			Context context) {

		long tempoDefinido = System.currentTimeMillis();

		// Objeto Notification
		Notification notification = new Notification(R.drawable.ic_launcher,
				titulo, tempoDefinido);

		// Intent que ser치 disparada quando o usu치rio clicar sobre a
		// Notifica칞칚o
		Intent intent = new Intent(context, AtivaGCMActivity.class);
		intent.putExtra("mensagem_recebida", mensagem);
		PendingIntent pendingIntent = PendingIntent.getActivity(context, 0,
				intent, PendingIntent.FLAG_UPDATE_CURRENT);

		// Configurando os dados da Notifica칞칚o
		notification.setLatestEventInfo(context, titulo, mensagem,
				pendingIntent);

		// Oculta a notifica칞칚o ap칩s o usu치rio clicar sobre ela
		notification.flags |= Notification.FLAG_AUTO_CANCEL;

		// Define alertas de acordo com o padr칚o definido no dispositivo
		notification.defaults = Notification.DEFAULT_ALL;

		// Agenda a Notifica칞칚o
		NotificationManager notificationManager = (NotificationManager) context
				.getSystemService(Context.NOTIFICATION_SERVICE);
		notificationManager.notify(0, notification);
	}
}
